<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#010101">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_gravity="top"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewmain"
            android:textColor="#ffffff"
            android:gravity="end"
            android:textSize="40sp"
            android:hint="@string/zero"
            android:textColorHint="#ffffff"
            android:maxLength="10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.15"
        android:weightSum="6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/memc"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/memplus"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/memminus"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/memr"
                android:id="@+id/button"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/clear"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="clear" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/cleare"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="partClear" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/divide"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="opOnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/delete"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="del" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/seven"
                android:id="@+id/button10"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/eight"
                android:id="@+id/button11"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/nine"
                android:id="@+id/button12"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/multiply"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="opOnClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/four"
                android:id="@+id/button13"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/five"
                android:id="@+id/button14"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/six"
                android:id="@+id/button15"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/plus"
                android:id="@+id/button22"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="opOnClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/one"
                android:id="@+id/button16"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/two"
                android:id="@+id/button17"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/three"
                android:id="@+id/button18"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/minus"
                android:id="@+id/button23"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="opOnClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/zero"
                android:id="@+id/button19"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/decimal"
                android:id="@+id/button20"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/plusminus"
                android:id="@+id/button21"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/equals"
                android:id="@+id/button24"
                android:layout_weight="1"
                android:background="#f903030c"
                android:textColor="#ffffff"
                android:onClick="calcButton" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
